@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "Menu Index";
}
<div class="container">
    <div class="rom">
        @foreach (var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4> @item.Name</h4>
                </div>
                <div>
                   <img src="@item.ImagUrl" style="width:70%" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("C") 
                </div>
            </div>
        }
    </div>

</div>